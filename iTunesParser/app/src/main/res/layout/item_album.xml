<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorBlack"
    android:padding="8dp">

    <ImageView
        android:id="@+id/image_album_item_artwork"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_album_item_name"
        style="@style/CustomText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@id/image_item_explicit_status"
        app:layout_constraintStart_toEndOf="@id/image_album_item_artwork"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_album_item_artist_name"
        style="@style/CustomText3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@id/image_item_explicit_status"
        app:layout_constraintStart_toEndOf="@id/image_album_item_artwork"
        app:layout_constraintTop_toBottomOf="@id/text_album_item_name" />

    <TextView
        android:id="@+id/text_album_item_description"
        style="@style/CustomText4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@id/image_item_explicit_status"
        app:layout_constraintStart_toEndOf="@id/image_album_item_artwork"
        app:layout_constraintTop_toBottomOf="@id/text_album_item_artist_name" />

    <ImageView
        android:id="@+id/image_item_explicit_status"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:scaleType="fitXY"
        android:src="@drawable/explicit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
